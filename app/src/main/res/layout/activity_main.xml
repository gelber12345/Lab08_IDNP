<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:text="Menu Principal"
            android:textAlignment="center"
            android:background="#536dfe"
            android:gravity="center"/>


        <Button
            android:id="@+id/btnVeterinaria"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_below="@id/textMenu"
            android:text="Veterinarias"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnAlbergue"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnVeterinaria"
            android:text="Albergues"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnCliente"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnAlbergue"
            android:text="Clientes"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

</ScrollView>
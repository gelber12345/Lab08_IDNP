<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Veterinarias.VeterinariasEdit"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"

        >

        <TextView
            android:id="@+id/txtTituloEditVeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Editar Veterinaria"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="#5E7FF7"/>

        <LinearLayout
            android:id="@+id/formularioEditVeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="50dp"
            android:layout_below="@+id/txtTituloEditVeter"
            >
            <TextView
                android:id="@+id/txtNombreEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                />

            <EditText
                android:id="@+id/etNombreEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:minWidth="48dp"
                android:minHeight="48dp">

            </EditText>

            <TextView
                android:id="@+id/txtDistritoEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distrito"
                />

            <EditText
                android:id="@+id/etDistritoEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_below="@+id/txtDistritoEditVeter">
            </EditText>

            <TextView
                android:id="@+id/txtUbicacionEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion:"
                />

            <EditText
                android:id="@+id/etUbicacionEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_below="@+id/txtUbicacionEditVeter">
            </EditText>

            <TextView
                android:id="@+id/txtCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo :"
                />

            <EditText
                android:id="@+id/etCorreoEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_below="@+id/txtCorreo">
            </EditText>

            <Button
                android:id="@+id/btnRegistrarEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="EDITAR"
                android:scaleType="fitCenter"
                android:layout_below="@+id/formularioEditVeter"/>
            <Button
                android:id="@+id/btnEliminarEditVeter"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="ELIMINAR"
                android:scaleType="fitCenter"
                android:layout_below="@+id/btnRegistrarEditVeter"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>